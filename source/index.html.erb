<!-- Your banner code -->

    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path data.image_url.background %>');">
      <div class="banner-content">
        <h1>Some Stuff</h1>
        <p>Very cool stuff, useful and smart</p>
        <form action="#" class="form-inline">
          <input class="form-control" type="text" placeholder="From">
          <input class="form-control" type="text" placeholder="Until">
          <select class="form-control">
            <option value="1">One People</option>
            <option value="2">Two People</option>
            <option value="3">Three People</option>
          </select>
          <input type="submit" class="btn btn-primary btn-lg" value="Search"></input>
        </form>
      </div>
    </div>

    <!-- Your features code -->
    <div class="wrapper-features padded">
      <div class="container">
        <div class="row">
          <div class="feature text-center">
            <div class="feature">
            <% data.feature.each do |feature| %>
              <div class="col-xs-12 col-sm-6 col-lg-3">
                <%= image_tag feature.image, class: "icons" %>
                <h3><%= feature.title %></h3>
                <p><%= feature.description %></p>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Your cards code -->

    <div class="card-wrapper padded">
      <h2 class="text-center">Your next trip</h2>
      <div class="container">
        <div class="row">
          <% data.cards.each do |card| %>
            <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path card.image %>');">
                <div class="card-category"><%= card.category %></div>
                <div class="card-description">
                  <h2><%= card.title %></h2>
                  <p><%= card.subtitle %></p>
                </div>
                <%= image_tag card.avatar_image, class: "card-user avatar-large" %>
                <%= link_to card.title, "#", class: "card-link" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Your newsletter code -->

    <div class="wrapper">
      <div class="newsletter text-center">
        <div class="container">
          <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
              <form action="#" class="newsletter form-inline">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input id="email" type="email" class="form-control" placeholder="youremail@email.com">
                </div>
                <input type="submit" value="Submit" class="btn btn-success form-control">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

